-- Just shell.run() this file and put breakpoint()'s  in
-- You may specify a place to print and how many times to ask
-- You can read tables by doing table[number] or table[#table] or just #table
local function getValue(name)
  val = _G[tostring(name)]
  return val
end
function breakpoint(count, x, y)
  for i=1, count do
    if not x then
      print("Which variable do you want to check?")
      local val = getValue(read())
      print(tostring(val))
    else
      term.setCursorPos(x, y)
      print("Which variable do you want to check?")
      local val = getValue(read())
      print(tostring(val))
      x, y = term.getCursorPos()
      term.setCursorPos(x, y)
    end
  end
end
